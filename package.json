{
  "name": "dramacode",
  "description": "AI-powered drama screenwriting tool",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.19",
  "scripts": {
    "dev": "bun run --cwd packages/dramacode src/index.ts",
    "typecheck": "bun run --cwd packages/dramacode typecheck && bun run --cwd packages/web typecheck",
    "test": "echo 'do-not-run-tests-from-root' && exit 1",
    "build": "bun run scripts/build.ts",
    "release": "bun run scripts/release.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@tsconfig/bun": "1.0.9",
    "typescript": "5.8.2"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  }
}
